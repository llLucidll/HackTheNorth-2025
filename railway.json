{
    "$schema": "https://railway.com/railway.schema.json",
    "build": {
      "builder": "NIXPACKS",
      "nixpacksPlan": {
        "providers": ["python"],
        "phases": {
          "setup": {
            "aptPkgs": ["ffmpeg"]
          },
          "install": {
            "dependsOn": ["setup"],
            "cmds": [
              "python -m pip install --upgrade pip",
              "python -m pip install --no-cache-dir -r fastapi-backend/requirements.txt"
            ]
          }
        }
      }
    },
    "deploy": {
      "startCommand": "cd fastapi-backend && uvicorn app.app:app --host 0.0.0.0 --port 8000",
      "healthcheckPath": "/health",
      "restartPolicyType": "ALWAYS"
    }
  }
  