{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
      "builder": "NIXPACKS",
      "nixpacksPlan": {
        "providers": ["python"],
        "phases": {
          "setup": {
            "aptPkgs": ["ffmpeg"]
          },
          "install": {
            "cmds": [
              "python -m venv /opt/venv",
              "/opt/venv/bin/pip install --upgrade pip",
              "/opt/venv/bin/pip install --no-cache-dir -r fastapi-backend/requirements.txt"
            ]
          }
        }
      }
    },
    "deploy": {
      "startCommand": "cd fastapi-backend && /opt/venv/bin/uvicorn app.app:app --host 0.0.0.0 --port $PORT",
      "healthcheckPath": "/health",
      "restartPolicyType": "ALWAYS"
    }
  }
  